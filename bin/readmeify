#!/usr/bin/env node

// Try to find package of current directory.
var pack, github, readme;
var dir = process.cwd();
try {
  pack = require(dir + '/package.json');
  console.log(pack.repository.url);
}
catch (err) {
  console.error('No package.json found in ' + dir);
  process.exit(1);
}

console.log(pack.version);
